<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

<changeSet id="200603-03" author="vitaly">
    <sql>create type status_enum as enum ('admin','client','manager')</sql>
    <createTable tableName="users" schemaName="wswallet">
        <column autoIncrement="true" name="id" type="INTEGER">
            <constraints primaryKey="true" primaryKeyName="user_id"/>
        </column>
        <column name="name" type="VARCHAR(50)"/>
        <column name="mail" type="VARCHAR(50)"/>
        <column name="phonenum" type="VARCHAR(15)"/>
        <column name="status" type="status_enum"/>
        <column name="wallet_id" type="INTEGER">
            <constraints nullable="true" />
        </column>
        <column name="login_id" type="INTEGER">
            <constraints nullable="true"/>
        </column>
    </createTable>
</changeSet>


</databaseChangeLog>